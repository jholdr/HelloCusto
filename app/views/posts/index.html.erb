<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>

      <th>Link</th>
      <th>Employer</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.category.name if post.category %></td>
        <td><%= post.link %></td>
        <td><%= post.employer %></td>
        <td><%= post.city %></td>
        <td><%= post.state %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @posts %>
<%= link_to 'New Post', new_post_path %>

<%= form_tag import_posts_path, multipart: true, class: 'form-inline' do %>
  <div class="form-group">
    <%= file_field_tag :file, class: 'btn btn-warning' %>
  </div>
</br></br>
  <div class="form-group">
    <%= submit_tag "Import CSV", class: 'btn btn-info' %>
  </div>
  <% end %>
</br>
